<?xml version="1.0" encoding="utf-8"?>
<!-- Alkalmazás téma beállítások -->
<resources>
    <!-- Alap téma Material Design 3 alapú -->
    <style name="Theme.Progr3ss" parent="Theme.Material3.Light.NoActionBar">
        <!-- Elsődleges színek -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_light</item>
        
        <!-- Háttér színek -->
        <item name="android:windowBackground">@color/background</item>
        
        <!-- Státusz bar -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Splash Screen téma -->
    <style name="Theme.Progr3ss.Splash" parent="Theme.Progr3ss">
        <item name="android:windowBackground">@color/primary</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>
</resources>
